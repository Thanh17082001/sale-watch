{{#section 'css'}}
    <link rel="stylesheet" href="/css/news/home.css" />
{{/section}}
<h1 class="text-center">Trang tin tá»©c</h1>


<div class="container">


    
    
        
        
        <div class="row">
          {{#each news}}
          <div class="col-10 col-md-5 my-2">
            <div class="layout d-flex">
              <div class="mb-4">
                <a  class="title-link" href="/news/{{_id}}">
                  <img width="200px" height="200px" src={{imageUrl}} class="layout-image" />
                </a>
              </div>
              <div>
                <h3> <a class="title-link" href="/news/{{_id}}">{{title}}</a> </h3>
                <div>{{formatDate createdAt}}</div>
              </div>
              
            </div>
          </div>
         {{/each}}
        </div>
  

 </div>

 {{!-- pagination --}}
    {{#with news}}
        {{#if (checkPageNumber pageNumber)}}
            <ul class="pagination justify-content-center">
                <li class="page-item">
                    <a class="page-link" href="/admin/watch" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
                {{#paginate pageNumber currentPage '/admin/watch'}}{{/paginate}}
                <li class="page-item">
                    <a class="page-link" href="/admin/watch?currentPage={{pageNumber}}" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
        {{/if}}
    {{/with}}
<script>
  let nodeList = document.querySelectorAll(".contentValue");
  nodeList.forEach(function(node) {
    node.innerHTML = node.textContent;

  });
</script>
