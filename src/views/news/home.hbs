{{#section 'css'}}
    <link rel="stylesheet" href="/css/news/home.css" />
{{/section}}
<h1>Home of news</h1>
<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
  Thêm tin tức mới
</button>

<!-- Modal Create a news -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Thêm tin tức mới</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="mt-4">
            <div class="row">
                <div class="col ">

                    <form method="post" action="/news" class="row" enctype="multipart/form-data">
                        <div class="form-group">
                                <label for="title">Tiêu đề</label>
                                <input type="text" class="form-control" id="title" name="title" required="true">
                        </div>
                            <div class="form-group">
                                <label for="editor1">Nội dung</label>
                                <textarea class="form-control" aria-label="With textarea" id="editor1" name="content" required="true"></textarea>
                        </div>
                        
                        <div class="form-group">
                                <label for="img">Ảnh tiêu đề</label>
                                <input type="file" class="form-control" id="imageUrl" name="imageUrl" required="true">
                        </div>
                        <button type="submit" class="btn btn-primary">Thêm thông tin</button>
                    </form>
                </div>
                
            </div>
        </div>
      </div>
    
    </div>
  </div>
</div>

{{#each news}}
    <div class="news-layout">
          <div class="dropdown-layout">
              <a  href="/news/edit/{{_id}}"><button type="button" class="btn btn-primary"><i class="fas fa-edit"></i></button></a>
              
              <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#delete-modal-{{@index}}">
                  <i class="fas fa-trash"></i>
              </button>
              <div class="modal fade" id="delete-modal-{{@index}}" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="delete-modal-label-{{@index}}" aria-hidden="true">
                            <div class="modal-dialog modal-sm">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="delete-modal-label-{{@index}}">Xóa bài viết </h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-footer justify-content-center">
                                        <button type="button" class="btn btn-outline-info" data-bs-dismiss="modal">Hủy</button>
                                        <button type="button" class="btn btn-danger">Xóa</button>
                                    </div>
                                </div>
                            </div>
              </div>
          </div>
           
          
        
      </div>
        <h2> <a class="title-link" href="/news/{{_id}}">{{title}}</a> </h2>
        <div>{{formatDate createdAt}}</div>
        {{!-- <p><span class="contentValue">{{content}}</span></p> --}}
        
        <div class="layout">
          <a class="title-link" href="/news/{{_id}}">
            <img src={{imageUrl}} class="layout-image" />
          </a>
        </div>
    </div>
       
{{/each}}

<div class="text-center">

  <nav aria-label="Page navigation example">
    <ul class="pagination">
      <li class="page-item"><a class="page-link" href="#">Previous</a></li>
      <li class="page-item"><a class="page-link" href="/news">1</a></li>
      <li class="page-item"><a class="page-link" href="/news?currentPage=2">2</a></li>
      <li class="page-item"><a class="page-link" href="/news?currentPage=3">3</a></li>
      <li class="page-item"><a class="page-link" href="#">Next</a></li>
    </ul>
  </nav>
</div>
<script>
  let nodeList = document.querySelectorAll(".contentValue");
  nodeList.forEach(function(node) {
    node.innerHTML = node.textContent;
  });
</script>
