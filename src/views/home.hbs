{{#section 'css'}}
    <link rel="stylesheet" href="/css/home.css" />
{{/section}}

<img class="img-bg" src="/images/teaser-gm-b2100-pc.avif">
<div class="container">
    <div class="mt-3 mb-3">
        <div class="title-home-brand"><h3>Thương hiệu</h3></div>
        <div class="content-home-brand pb-3">
            {{#each brands}}
                <a href="/?brand={{_id}}">
                    <button class="btn btn-outline-dark btn-lg btn-home-brand me-3 ms-3">
                        {{name}}
                    </button>
                </a>
            {{/each}}
        </div>
    </div>
    <div class="row mt-3 mb-3">
        <div class="col-12">
            <h4>Sản phẩm bán chạy</h4>
        </div>

        {{#each hotWatches}}
            <div class="col-6 col-xl-3 col-md-4 mb-3">
                <div class="card" data-bs-toggle="tooltip" data-bs-placement="right" data-bs-title="{{name}}">
                    <a style="text-decoration: none;" href="/watch/{{_id}}">
                        <img src="{{imageUrl}}" class="card-img-top card-image" alt="...">
                        <div class="card-body">
                            <div class="text-name-home">{{formatName name}}</div>
                            <div class="text-price-home">{{formatPrice price}}</div>
                        </div>
                    </a>
                </div>
            </div>
        {{/each}}
    </div>
    <div class="row mt-3 mb-3">
        <div class="col-12">
            <h4>Sản phẩm mới</h4>
        </div>
        {{#each newWatches}}
            <div class="col-6 col-xl-3 col-md-4 mb-3">
                <div class="card" data-bs-toggle="tooltip" data-bs-placement="right" data-bs-title="{{name}}">
                    <a style="text-decoration: none;" href="/watch/{{_id}}">
                        <img src="{{imageUrl}}" class="card-img-top card-image" alt="...">
                        <div class="card-body">
                            <div class="text-name-home">{{formatName name}}</div>
                            <div class="text-price-home">{{formatPrice price}}</div>
                        </div>
                    </a>
                </div>
            </div>
        {{/each}}
    </div>
    <div class="my-4" style="background-color: #e2e2e2; border-radius: 25px;">
        <div class="row m-4">
            
            <div class="d-flex justify-content-between my-4">
                <div class="fw-bold fs-3 text-primary">24H CÔNG NGHỆ</div>
                <a href="/news" class="link-all">XEM TẤT CẢ <i class="fas fa-chevron-right"></i></a>
            </div>
            {{#each news}} 
            <div class="col-12 col-xl-4 col-md-4">
                <a href="/news/{{_id}}" class="link-news">
                    <img class="image-news" src="{{imageUrl}}" >
                    <div>{{title}}</div>
                </a>
                
            </div>
            {{/each}}
        </div>
    </div>
</div>
    

{{#section 'js'}}
    <script src="/js/home.js"></script>
{{/section}}