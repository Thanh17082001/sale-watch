{{#section 'css'}}
    <link rel="stylesheet" href="/css/user.css" />
{{/section}}
<div class="title d-none">Đổi mật khẩu</div>

<div class="register">
    <div class="register__banner">
        <img src="https://curnonwatch.com/blog/wp-content/uploads/2021/03/anh-dong-ho-dep-76.jpg" alt="" class="banner__img">
    </div>

    <div class="register__content">
        <div class="container">
            <div class="form">
                <form class="form__block" id="change-pass-form"  action="/user/change-pass/{{id}}" method="POST">
                <h3 class="form__headding">Đặt lại mật khẩu</h3>
                {{#if messageFailure}}
                    <span class="text-danger">{{messageFailure}}</span>
                {{/if}}
                {{#if messageSuccess}}
                    <span class="text-success">{{messageSuccess}}</span>
                {{/if}}
                    <div class="form__group">
                        <label for="" class="form__label">Mật khẩu cũ</label>
                        <input type="password" name="passwordOld" id="password-old" class="form__input" placeholder="Mật khẩu cũ của bạn">
                        <span class="message"></span>
                    </div> 
                    <div class="form__group">
                        <label for="" class="form__label">Mật khẩu mới</label>
                        <input type="password" name="passwordNew" id="password-new" class="form__input" placeholder="Mật khẩu của bạn">
                        <span class="message"></span>
                    </div>
                    <div class="form__group">
                        <label for="" class="form__label">Xác thực mật khẩu</label>
                        <input type="password" class="form__input" id="confirm-pass-change" placeholder="Nhập lại mật khẩu">
                        <span class="message"></span>

                    </div>
                    <button class="btn__submit btn-change-pass" id="submit-btn">Đặt lại</button>
                </form>
            </div>
        </div>
    </div>
</div>
</div>

{{#section 'js'}}
<script src="/js/user.js"></script>
{{/section}}